# ============================================================
# Acrobaticz - DEVELOPMENT Environment
# 
# Usage:
#   cp .env.dev .env
#   docker-compose -f docker-compose.dev.yml up -d
# ============================================================

# ============================================================
# Application
# ============================================================
NODE_ENV=development
PORT=3000
DOMAIN=localhost:3000

# ============================================================
# Database (PostgreSQL)
# ============================================================
DB_NAME=acrobaticz_dev
DB_USER=acrobaticz_user
DB_PASSWORD=dev_password_123

# ============================================================
# JWT Authentication
# ============================================================
JWT_SECRET=dev-secret-key-change-this-in-production
JWT_EXPIRATION=7d

# ============================================================
# MinIO / S3 Storage
# ============================================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin_dev_123
MINIO_ENDPOINT=http://minio:9000
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin_dev_123
S3_BUCKET=acrobaticz-dev
S3_REGION=us-east-1

# ============================================================
# Optional: External Storage Path
# ============================================================
# STORAGE_PATH=./storage/minio

# ============================================================
# Optional: Translation & AI APIs
# ============================================================
DEEPL_API_KEY=
GOOGLE_GENERATIVE_AI_API_KEY=
