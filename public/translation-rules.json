{
  "meta": {
    "version": "2.0",
    "description": "Centralised translation rules engine - consolidates all translation logic",
    "lastUpdated": "2026-01-16",
    "source": "Unified from translationRules.ts + translation-rules.json"
  },
  
  "postTranslationRules": {
    "Quote": "Orçamento",
    "Quotes": "Orçamentos"
  },
  
  "neverTranslateRules": {
    "description": "High priority - Never translate user data",
    "rules": [
      {
        "selector": "input[value]:not([value=''])",
        "action": "skip",
        "reason": "User input values",
        "priority": 1
      },
      {
        "selector": "textarea:not(:empty)",
        "action": "skip",
        "reason": "User text content",
        "priority": 1
      },
      {
        "selector": "select option[selected]:not([data-ui-text])",
        "action": "skip",
        "reason": "Selected user data",
        "priority": 1
      },
      {
        "selector": "[data-user-content]",
        "action": "skip",
        "reason": "User-generated content",
        "priority": 1
      },
      {
        "selector": "[data-personal-info]",
        "action": "skip",
        "reason": "Personal information",
        "priority": 1
      },
      {
        "selector": ".email, [type='email']",
        "action": "skip",
        "reason": "Email addresses",
        "priority": 1
      },
      {
        "selector": ".phone, [type='tel']",
        "action": "skip",
        "reason": "Phone numbers",
        "priority": 1
      },
      {
        "selector": "[data-client-data]",
        "action": "skip",
        "reason": "Client data",
        "priority": 1
      },
      {
        "selector": "[data-equipment-name]",
        "action": "skip",
        "reason": "Equipment names",
        "priority": 1
      },
      {
        "selector": ".client-name, .customer-name",
        "action": "skip",
        "reason": "Client names",
        "priority": 1
      },
      {
        "selector": ".equipment-name, .product-name",
        "action": "skip",
        "reason": "Product names",
        "priority": 1
      },
      {
        "selector": ".company-name, .business-name",
        "action": "skip",
        "reason": "Company names",
        "priority": 1
      },
      {
        "selector": ".serial-number, .sku, .product-code",
        "action": "skip",
        "reason": "Product identifiers",
        "priority": 1
      },
      {
        "selector": ".id-field, .reference-number",
        "action": "skip",
        "reason": "System identifiers",
        "priority": 1
      },
      {
        "selector": ".invoice-number, .transaction-id",
        "action": "skip",
        "reason": "Transaction identifiers",
        "priority": 1
      },
      {
        "selector": ".price-amount, .total-amount, .currency",
        "action": "skip",
        "reason": "Financial amounts",
        "priority": 1
      },
      {
        "selector": "[data-price], [data-amount]",
        "action": "skip",
        "reason": "Price data",
        "priority": 1
      },
      {
        "selector": "code, pre, .code",
        "action": "skip",
        "reason": "Code content",
        "priority": 1
      },
      {
        "selector": "[data-technical]",
        "action": "skip",
        "reason": "Technical content",
        "priority": 1
      },
      {
        "selector": "[data-no-translate], .no-translate",
        "action": "skip",
        "reason": "Explicitly excluded",
        "priority": 1
      }
    ]
  },
  
  "analyzeRules": {
    "description": "Medium priority - Context analysis required",
    "rules": [
      {
        "selector": "td",
        "action": "analyze",
        "reason": "Table data needs analysis",
        "priority": 2
      },
      {
        "selector": "tbody tr",
        "action": "analyze",
        "reason": "Table rows may contain user data",
        "priority": 2
      },
      {
        "selector": ".dropdown-item, option",
        "action": "analyze",
        "reason": "May be user data or UI option",
        "priority": 2
      },
      {
        "selector": ".description, .note",
        "action": "analyze",
        "reason": "May be user content or UI text",
        "priority": 2
      },
      {
        "selector": "li",
        "action": "analyze",
        "reason": "List items need content analysis",
        "priority": 2
      }
    ]
  },
  
  "translateRules": {
    "description": "Low priority - Usually translate (UI elements)",
    "rules": [
      {
        "selector": "nav, .nav, .menu",
        "action": "translate",
        "reason": "Navigation elements",
        "priority": 3
      },
      {
        "selector": ".breadcrumb",
        "action": "translate",
        "reason": "Navigation breadcrumbs",
        "priority": 3
      },
      {
        "selector": "button, .btn",
        "action": "translate",
        "reason": "UI buttons",
        "priority": 3
      },
      {
        "selector": "[role='button']",
        "action": "translate",
        "reason": "Button elements",
        "priority": 3
      },
      {
        "selector": "label",
        "action": "translate",
        "reason": "Form labels",
        "priority": 3
      },
      {
        "selector": "[placeholder]",
        "action": "translate",
        "reason": "Form placeholders",
        "priority": 3
      },
      {
        "selector": "th, thead",
        "action": "translate",
        "reason": "Table headers",
        "priority": 3
      },
      {
        "selector": ".badge, .status, .tag",
        "action": "translate",
        "reason": "Status indicators",
        "priority": 3
      },
      {
        "selector": ".alert, .notification, .message",
        "action": "translate",
        "reason": "System messages",
        "priority": 3
      },
      {
        "selector": ".error, .warning, .success",
        "action": "translate",
        "reason": "Status messages",
        "priority": 3
      },
      {
        "selector": "h1, h2, h3, h4, h5, h6",
        "action": "translate",
        "reason": "Page headings",
        "priority": 3
      },
      {
        "selector": ".title, .heading",
        "action": "translate",
        "reason": "UI titles",
        "priority": 3
      },
      {
        "selector": ".help-text, .hint, .tooltip",
        "action": "translate",
        "reason": "Help content",
        "priority": 3
      },
      {
        "selector": "[data-translate='true'], .translate",
        "action": "translate",
        "reason": "Explicitly included",
        "priority": 3
      }
    ]
  },
  
  "contentPatterns": {
    "personalData": {
      "description": "Patterns that identify personal data - never translate",
      "patterns": [
        {
          "name": "email",
          "regex": "\\b[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\\.[A-Z|a-z]{2,}\\b"
        },
        {
          "name": "phone",
          "regex": "[\\+]?[1-9]?[\\d\\s\\-\\(\\)]{7,15}",
          "requiresDigits": 3
        },
        {
          "name": "properNames",
          "regex": "^[A-Z][a-z]+(?: [A-Z][a-z]+){1,2}$"
        },
        {
          "name": "address",
          "regex": "^\\d+\\s+[A-Za-z\\s]+(?:Street|St|Avenue|Ave|Road|Rd|Drive|Dr|Lane|Ln)"
        }
      ]
    },
    
    "businessData": {
      "description": "Patterns that identify business data - never translate",
      "patterns": [
        {
          "name": "companyLegalSuffix",
          "regex": "(Ltd|LLC|Inc|Corp|Corporation|Company|Co\\.|GmbH|S\\.A\\.|Lda|Ltda)\\.?$"
        },
        {
          "name": "productCode",
          "regex": "^[A-Z0-9\\-_]{3,20}$",
          "requiresAlpha": true,
          "requiresDigits": true
        },
        {
          "name": "currencyAmount",
          "regex": "[\\$£€¥]\\s*\\d+(?:[,\\.] \\d{2,3})*(?:\\.\\d{2})?"
        },
        {
          "name": "currencyAmountSuffix",
          "regex": "\\d+(?:[,\\.]\\d{2,3})*(?:\\.\\d{2})?\\s*[\\$£€¥]"
        },
        {
          "name": "brandWithModel",
          "regex": "^[A-Z][a-z]+\\s+[A-Z0-9\\-]+$"
        }
      ]
    },
    
    "systemIdentifiers": {
      "description": "Patterns that identify system identifiers - never translate",
      "patterns": [
        {
          "name": "serialNumber",
          "regex": "^[A-Z]{2,}\\d{4,}$"
        },
        {
          "name": "snPrefix",
          "regex": "^SN[\\d\\-A-Z]{4,}$"
        },
        {
          "name": "uuid",
          "regex": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
        },
        {
          "name": "invoiceNumber",
          "regex": "^(INV|REF|ORD|QUO)[\\-\\#]?\\d+$"
        },
        {
          "name": "idNumber",
          "regex": "^(ID|NO|NUM)[\\:\\-\\s]?\\d+$"
        }
      ]
    },
    
    "dateTime": {
      "description": "Patterns that identify dates/times - never translate",
      "patterns": [
        {
          "name": "isoDate",
          "regex": "^\\d{4}-\\d{2}-\\d{2}"
        },
        {
          "name": "commonDate",
          "regex": "^\\d{1,2}[\\/\\-\\.]\\d{1,2}[\\/\\-\\.]\\d{2,4}$"
        },
        {
          "name": "time",
          "regex": "^\\d{1,2}:\\d{2}(?::\\d{2})?(?:\\s?[AaPp][Mm])?$"
        }
      ]
    },
    
    "uiElements": {
      "description": "Common UI words - always translate",
      "keywords": [
        "save", "cancel", "delete", "edit", "add", "create", "update", "submit",
        "login", "logout", "register", "search", "filter", "sort", "export",
        "import", "download", "upload", "print", "refresh", "back", "next",
        "previous", "continue", "finish", "close", "open", "view", "details",
        "active", "inactive", "pending", "completed", "cancelled", "draft",
        "approved", "rejected", "available", "unavailable", "loading", "error"
      ]
    }
  },
  
  "userContentAreas": {
    "description": "Areas containing user data - elements inside these should never be translated",
    "selectors": [
      "[data-user-content]",
      ".user-content",
      ".client-info",
      ".equipment-details",
      ".event-info",
      ".user-data"
    ]
  },
  
  "constraints": {
    "maxTextLength": 500,
    "description": "Skip texts longer than this (usually code blocks or data dumps)"
  }
}