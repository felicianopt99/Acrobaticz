# =============================================================================
# AV-RENTALS Environment Configuration Template
# =============================================================================
# IMPORTANT: After running the installation wizard at /install, most 
# configuration values will be stored in the database and no longer needed
# as environment variables.
# 
# Copy this file to .env and fill in your configuration values
# NEVER commit the actual .env file with real secrets to GitHub
# Use GitHub Actions Secrets for production deployment instead

# =============================================================================
# DATABASE (REQUIRED)
# =============================================================================
# PostgreSQL connection string (required before installation)
# Format: postgresql://user:password@host:port/database
DATABASE_URL="postgresql://avrentals_user:avrentals_pass@postgres:5432/avrentals_db"

# =============================================================================
# ENCRYPTION KEY (Development only)
# =============================================================================
# Used for encrypting sensitive configuration values in the database
# Change this in production! Generate with: openssl rand -hex 16
CONFIG_ENCRYPTION_KEY="dev-key-change-in-production"

# =============================================================================
# APPLICATION ENVIRONMENT
# =============================================================================
# Set to 'production' for deployed instances
NODE_ENV="development"
# =============================================================================
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
DEFAULT_TARGET_LANG="pt"

# =============================================================================
# EXTERNAL SERVICES (OPTIONAL)
# =============================================================================
# Google Generative AI (Gemini)
# Get key from: https://ai.google.dev/
GOOGLE_GENERATIVE_AI_API_KEY=""
GEMINI_API_KEY=""

# DeepL Translation API
# Get key from: https://www.deepl.com/pro-api
DEEPL_API_KEY=""

# =============================================================================
# PRODUCTION ONLY - Dynamic DNS (for self-hosted deployments)
# =============================================================================
# DuckDNS setup for dynamic domain
DOMAIN="acrobaticzrental.duckdns.org"
DUCKDNS_DOMAIN="acrobaticzrental"
DUCKDNS_TOKEN="your-duckdns-token-here"

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================
# Cloud storage paths (for backup drive or external storage)
EXTERNAL_STORAGE_PATH="/mnt/backup_drive/av-rentals/cloud-storage"
EXTERNAL_STORAGE_TEMP="/mnt/backup_drive/av-rentals/cloud-storage/temp"
STORAGE_CHECK_INTERVAL="300000"
DEFAULT_STORAGE_QUOTA="53687091200"
ENABLE_STORAGE_DISK_CHECK="true"

# =============================================================================
# LOGGING
# =============================================================================
LOG_FILE="false"
TZ="UTC"

# =============================================================================
# DEVELOPMENT OPTIONS
# =============================================================================
# Enable detailed logging (development only)
DEBUG="false"

# API timeout (in milliseconds)
API_TIMEOUT="30000"
